<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- title -->
    <title><%= @title %></title>
    <!-- style -->
    <link rel='stylesheet' href='//cdn.jsdelivr.net/npm/hack-font@3.3.0/build/web/hack-subset.css'>
    <style>
        body {
            background: lightgrey;
            color: black;
            font-family: "Hack", monospace;
            font-size: 18px;
            padding: 2rem;
        }
        h1,
        p {
            padding-left: 1rem;
            padding-right: 1rem;
        }
        textarea {
            background: white;
            color: black;
            min-width: 100%;
            min-height: 240px;
            font-family: "Hack", monospace;
            font-size: 18px;
            border: none;
            padding: 1rem;
            box-sizing: border-box;
            border-radius: 1rem;
        }
        textarea:hover {
            outline: 2px solid darkturquoise;   
        }
        textarea:focus {
            outline: 2px solid turquoise;   
        }
    </style>
</head>
<body>
    <h1><%= @title %></h1>
    <p>Github: <a href="https://github.com/mrsjoberg/pascal-in-ruby">github.com/mrsjoberg/pascal-in-ruby</a></p>
    <!-- editor -->
    <textarea id="editor"></textarea>
    <!-- outputs -->
    <p><strong>Characters:</strong> <span id="characters">0</span></p>
    <p><strong>Tokens:</strong> <span id="tokens">[]</span></p>
    <p><strong>AST:</strong> <span id="ast">[]</span></p>
    <p><strong>Issues:</strong> <span id="issues">[]</span></p>
    <p><strong>Output:</strong> <span id="result"></span></p>
    <!-- update -->
    <script>
        // editor
        const editor = document.getElementById("editor");
        editor.addEventListener("input", function() {
            const input = editor.value;
            // send to server
            fetch("/update", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({ input }),
            }).then(response => {
                if (!response.ok) {
                    throw new Error("something went wrong?")
                }
                return response.json();
            }).then(data => {
                document.getElementById("characters").innerHTML = data.characters;
                document.getElementById("tokens").innerHTML = data.tokens;
                document.getElementById("ast").innerHTML = data.ast;
                document.getElementById("issues").innerHTML = data.issues;
                document.getElementById("result").innerHTML = data.result;
            }).catch(error => {
                console.error(error);
            });
        });
        // capture tab in textarea https://stackoverflow.com/questions/6637341/use-tab-to-indent-in-textarea
        document.getElementById('editor').addEventListener('keydown', function(e) {
            if (e.key == 'Tab') {
                e.preventDefault();
                var start = this.selectionStart;
                var end = this.selectionEnd;
                // set textarea value to text before caret + tab + text after caret
                this.value = this.value.substring(0, start) + "\t" + this.value.substring(end);
                // put caret at right position again
                this.selectionStart = this.selectionEnd = start + 1;
            }
        });
    </script>
</body>
</html>